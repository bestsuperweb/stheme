						{% if section.settings.cl_des_4 != blank %}
						<p class="cl-des">{{ section.settings.cl_des_4 }}</p>
						{% endif %}
					</div>
				</div>
			</div>
			
		</div>
	</div>
	<div class="happy-about-us">
      <div class="happy-ab">
		{% if section.settings.happy_title != blank %}
		<div class="title-happy-about">
			<h2>{{ section.settings.happy_title }}</h2>
