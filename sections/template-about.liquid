<div class="container page-about">
	<h2 class="page-title">{{ page.title }}</h2>
	<div class="row">
		<div class="col-md-9 welcome-about-us">
			{% if section.settings.about_title != blank %}
			<div class="title-about-us">
				<h2>{{ section.settings.about_title }}</h2>
			</div>
			{% endif %}
			<div class="content-about-us">
				{% if section.settings.about_text_desc != blank %}
				<div class="image-about-us">
				  <img class="img-respon" alt="{{ section.settings.about_image.alt | default: shop.name }}" src="{{ section.settings.about_image | img_url: 'master' }}" />
				</div>
				{% endif %}
				{% if section.settings.about_text_desc != blank %}
				<div class="des-about-us">
					{{ section.settings.about_text_desc }}
				</div>
				{% endif %}
			</div>
		</div>
		<div class="col-md-3 why-choose-us">
			{% if section.settings.choose_title != blank %}
			<div class="title-about-us">
			<h2>{{ section.settings.choose_title }}</h2>
			</div>
			{% endif %}
			<div class="content-why">
			<ul class="why-list">
				{% if section.settings.why_list_1 != blank %}
				<li><a title="Shipping &amp; Returns" href="#">{{ section.settings.why_list_1 }}</a></li>
				{% endif %}
				{% if section.settings.why_list_2 != blank %}
				<li><a title="Secure Shopping" href="#">{{ section.settings.why_list_2 }}</a></li>
				{% endif %}
				{% if section.settings.why_list_3 != blank %}
				<li><a title="International Shipping" href="#">{{ section.settings.why_list_3 }}</a></li>
				{% endif %}
				{% if section.settings.why_list_4 != blank %}
				<li><a title="Affiliates" href="#">{{ section.settings.why_list_4 }}</a></li>
				{% endif %}
				{% if section.settings.why_list_5 != blank %}
				<li><a title="Group Sales" href="#">{{ section.settings.why_list_5 }}</a></li>
				{% endif %}
			</ul>
			</div>
		</div>
		
	</div>
	<div class="our-member">
		{% if section.settings.member_title != blank %}
			<div class="title-about-us">
			<h2>{{ section.settings.member_title }}</h2>
			</div>
		{% endif %}

		{% if section.settings.our_text_desc != blank %}
		<div class="dshort-des">
			{{ section.settings.our_text_desc }}
		</div>
		{% endif %}
		<div class="flex-row">
			<div class="col-md-3 col-sm-3 col-xxs-6">
				<div class="item-inner">
					<div class="w-image-box">
						{% if section.settings.our_image_1 != blank %}
						<div class="item-image">
							<a title="Jennifer lawrence" href="#">
							<img class="img-respon" alt="{{ section.settings.our_image_1.alt | default: shop.name }}" src="{{ section.settings.our_image_1 | img_url: 'master' }}" />
							</a>
						</div>
						{% endif %}
						<a class="cl-nw cl-facebook" title="Facebook" href="#">Facebook</a> 
						<a class="cl-nw cl-flickr" title="Flickr" href="#">Flickr</a> 
						<a class="cl-nw cl-twitter" title="Twitter" href="#">Twitter</a>
					</div>
					<div class="info-member">
						{% if section.settings.cl_name_1 != blank %}
						<h2 class="cl-name"><a title="Jennifer lawrence" href="#">{{ section.settings.cl_name_1 }}</a></h2>
						{% endif %}
						{% if section.settings.cl_job_1 != blank %}
						<p class="cl-job">{{ section.settings.cl_job_1 }}Tech Leader</p>
						{% endif %}
						{% if section.settings.cl_des_1 != blank %}
						<p class="cl-des">{{ section.settings.cl_des_1 }}</p>
						{% endif %}
					</div>
				</div>
			</div>
			<div class="col-md-3 col-sm-3 col-xxs-6">
				<div class="item-inner">
					<div class="w-image-box">
						{% if section.settings.our_image_2 != blank %}
